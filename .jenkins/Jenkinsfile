pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile.build'

            // 'repo' is defined in the Jenkins Pipeline Git config
            dir 'repo/.jenkins'

            // HOME=/home/circleci on this image
            // 3434 is the circleci user/group
            args '--user 3434:3434 --volume $WORKSPACE/.cache:/home/circleci/.cache --volume $WORKSPACE/.ivy2:/home/circleci/.ivy2 --volume $WORKSPACE/.m2:/home/circleci/.m2 --volume $WORKSPACE/.sbt:/home/circleci/.sbt'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'printenv'
                sh 'id'
                sh 'pwd'
                sh 'cat /etc/passwd'
                sh 'cat /etc/group'
                sh 'ls -aRF'
                sh 'sbt test:compile'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        cleanup {
//             sh 'echo'
            sh 'rm -rf ?'
        }
    }
}
