pipeline {
    environment {
        // These JVM system properties are for sbt, and may be other Java applications.
        // sbt needs user.home for locating its caches.
        JAVA_OPTS = '-Duser.home=/var/lib/jenkins/workspace/griffon'
    }

    agent {
        dockerfile {
            filename 'Dockerfile.build'

            // 'repo' is defined in the Jenkins Pipeline Git config
            dir 'repo/.jenkins'

            // Jenkins' Docker setup mirrors the current directory into the image
            //TODO Create this from pwd().
            args "--env HOME=/var/lib/jenkins/workspace/griffon"
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'printenv'
                sh 'sbt test:compile'
//                 archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        cleanup {
//             sh 'echo'
            sh 'rm -rf .* *'
        }
    }
}
