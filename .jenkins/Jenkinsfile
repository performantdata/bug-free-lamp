pipeline {
    agent {
        docker {
            image 'openjdk:8-jdk-buster'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'sbt test:compile'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
