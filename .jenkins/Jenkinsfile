pipeline {
    agent {
//         docker {
//             image 'circleci/openjdk:8-jdk-buster'
//             args '--volume $WORKSPACE/.cache:/root/.cache --volume $WORKSPACE/.ivy2:/root/.ivy2 --volume $WORKSPACE/.m2:/root/.m2 --volume $WORKSPACE/.sbt:/root/.sbt'
//         }
        dockerfile {
           filename 'Dockerfile.build'
           dir '.jenkins'
        }
    }

    stages {
        stage('Build') {
            steps {
                preBuildCleanup {
                    deleteDirectories()
                }
                echo 'Building..'
                sh 'sbt test:compile'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
