pipeline {
    agent {
//         docker {
//             image 'circleci/openjdk:8-jdk-buster'
//             args '--volume $WORKSPACE/.cache:/root/.cache --volume $WORKSPACE/.ivy2:/root/.ivy2 --volume $WORKSPACE/.m2:/root/.m2 --volume $WORKSPACE/.sbt:/root/.sbt'
//         }
        dockerfile {
           filename 'Dockerfile.build'
           // 'repo' is defined in the Jenkins Pipeline Git config
           dir 'repo/.jenkins'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'sbt test:compile'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        cleanup {
            sh 'echo'
//             sh 'rm -rf * .*'
        }
    }
}
