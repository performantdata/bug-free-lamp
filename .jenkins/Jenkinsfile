pipeline {
    agent {
        docker {
            image 'circleci/openjdk:8-jdk-buster'
            args '--volume ${env.WORKSPACE}/.cache:/root/.cache --volume ${env.WORKSPACE}/.ivy2:/root/.ivy2 --volume ${env.WORKSPACE}/.m2:/root/.m2 --volume ${env.WORKSPACE}/.sbt:/root/.sbt'
        }
//         dockerfile {
//            filename 'Dockerfile.build'
//         }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'sbt test:compile'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'sbt test'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
