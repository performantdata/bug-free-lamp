pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile.build'

            // 'repo' is defined in the Jenkins Pipeline Git config
            dir 'repo/.jenkins'

            // Jenkins' Docker setup mirrors the current directory into the image
            //TODO Create this from pwd().
            additionalBuildArgs '--build-arg HOME=/var/lib/jenkins/workspace/griffon'

            // Override the workdir applied by Jenkins via "docker run -w".
            args '--workdir=/var/lib/jenkins/workspace/griffon/repo'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'printenv'
                sh 'pwd'
                sh script: 'cd repo && sbt test:compile', label: 'Compile the code'
//                 archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh script: 'cd repo && sbt test', label: 'Run tests'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        cleanup {
//             sh 'echo'
            sh 'rm -rf foo'
        }
    }
}
